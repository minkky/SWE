<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mgjs.mgjs.NoteActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/schedule_titleTextView"
            android:text=" View all Schedule"
            android:textSize="30sp"
            android:layout_width="240dp"
            android:layout_weight="1"
            android:textStyle="normal|bold|italic"
            android:gravity="center_vertical" />

        <ImageButton
            android:src="@android:drawable/ic_input_add"
            android:layout_height="match_parent"
            android:id="@+id/schedule_addButton"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:background="?android:attr/colorBackground"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:onClick="onAddScheduleClicked" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:layout_marginBottom="10dp"
        android:background="#A9A9A9"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/android:list"
        android:layout_weight="1"
        android:layout_marginTop="10dp" />

</LinearLayout>
