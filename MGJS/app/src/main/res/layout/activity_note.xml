<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_note"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mgjs.mgjs.NoteActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/note_titleTextView"
            android:text="View all Note "
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="240dp"
            android:textStyle="normal|bold|italic" />

        <ImageButton
            android:src="@android:drawable/ic_input_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/note_addbutton"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:background="#fafafa"
            android:layout_above="@+id/listView2"
            android:layout_weight="1"
            android:onClick="onAddNoteClicked"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:layout_marginBottom="10dp"
        android:background="#A9A9A9"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/android:list"
        android:clickable="false" />
</LinearLayout>
