<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mgjs.mgjs.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp">

        <TextView
            android:text="Schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_scheduleTextView"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:onClick="onScheduleClicked"
            android:textAlignment="center" />

        <TextView
            android:text="PhoneBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_phonebookTextView"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:onClick="onPhoneBookClicked"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center" />

        <TextView
            android:text="Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_noteTextView"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:onClick="onNoteClicked"
            android:layout_marginTop="30dp"
            android:textAlignment="center" />
    </LinearLayout>
</RelativeLayout>
